<div class="banner-w3agile">
   <div class="container">
    <h3>
      <span>
        <h2><%= t ".exam_list" %></h2>
      </span>
    </h3>
  </div>
</div>
<div class="containe">
  <div class="col-md-12">
    <div class="row">
      <div class="col-md-10 col-md-offset-1">
        <div class="form-exam">
          <%= simple_form_for @exam, html: {class: "form-inline"},
            remote: true do |f| %>
            <%= f.select :subject_id,
              @subjects.collect {|subject| [subject.name, subject.id]},
              {}, {class: "form-control"} %>
            <%= f.submit t("create_button"), class: "btn btn-primary" %>
          <% end %>
        </div>
        <hr>
        <table class="table table-hover table-bordered">
          <thead>
            <tr class="info">
              <th class="created_at"><%= t ".created_date" %></th>
              <th class="subject"><%= t ".subject_name" %></th>
              <th class="status"><%= t ".status" %></th>
              <th class="duration"><%= t ".duration" %></th>
              <th class="question_nunmber"><%= t ".question_number" %></th>
              <th class="spent_time"><%= t ".spent_time" %></th>
              <th class="score"><%= t ".score" %></th>
              <th class="action"><%= t ".action" %></th>
            </tr>
          </thead>
          <tbody id = "body_table_data">
            <%= render "list_exam" %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
