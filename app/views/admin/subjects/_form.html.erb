<div class="modal fade bd-example-modal-sm" id="address" tabindex="-1"
  role="dialog" aria-labelledby="mySmallModalLabel" aria-hidden="true">
  <div class="modal-dialog">
      <div class="modal-header">
        <h1><%= t ".edit_subject" %></h1>
      </div>
      <%= form_for [:admin, @subject] do |f| %>
        <div class="modal-body">
          <div class="form_errors">
            <%= render "shared/error_messages", object: @subject %>
          </div>
          <div class="form-group">
            <%= f.label :name %>
            <%= f.text_field :name, class: "form-control" %>
          </div>
          <div class="form-group">
            <%= f.label :duration %>
            <%= f.text_field :duration, class: "form-control" %>
          </div>
        </div>
        <div class="modal-footer">
          <span class="pull-right">
            <%= f.submit t("creates"), class: "btn btn-primary" %>
          </span>
          <span class="pull-left">
            <%= link_to t(".cancel_button"), admin_subjects_path,
              class: "btn btn-warning", data: {dismiss: "modal"} %>
          </span>
        </div>
      <% end %>
  </div>
</div>
