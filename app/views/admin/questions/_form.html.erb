<div class="containe">
  <div class="col-md-12">
    <div class="row">
      <div class="modal-dialog">
        <div class="modal-content" id="question">
          <div class="modal-header"><h1><%= yield(:modal_title) %></h1></div>
          <%= simple_form_for [:admin, @question] do |f| %>
            <div class="modal-body">
              <div class="form_errors">
                <%= render "shared/error_messages", object: @question %>
              </div>
              <div class="form-group">
                <%= f.label :level_id %>
                <%= f.select :level_id, options_from_collection_for_select(@levels,
                  :id, lambda { |level| "#{level.name} (#{level.subject.name})" }) %>
              </div>
              <div class="form-group">
                <%= f.input :content, placeholder: t(".question_content"),
                  error: t(".question_content_error") %>
              </div>
              <div class="form-group">
                <%= f.label :answer_type %>
                <%= f.select :answer_type, Question.answer_types.keys.to_a, {},
                  {class: "form-control"} %>
              </div>
              <div id ="answers_field">
                <%= f.simple_fields_for :answers do |answer_builder| %>
                  <%= render "answer_fields", f: answer_builder %>
                <% end %>
                <div id ="answer_field">
                </div>
                <div class="add_fields">
                  <%= link_to_add_fields t(".add_answer"), f, :answers %>
                </div>
              </div>
            </div>
            <div class="modal-footer">
              <span class="pull-right">
                <%= f.submit yield(:submit_button), class: "btn btn-primary" %>
              </span>
              <span class="pull-left">
                <%= link_to t(".cancel_button"), admin_questions_path,
                  class: "btn btn-warning",data: {dismiss: "modal"} %>
              </span>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
